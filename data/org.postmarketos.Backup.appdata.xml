<component type="desktop-application">
    <id>org.postmarketos.Backup</id>
    <metadata_license>CC0-1.0</metadata_license>
    <project_license>GPL-3.0</project_license>
    <name>Backup</name>
    <summary>postmarketOS Backup and restore tool</summary>
    <description>
        <p>
            A backup application that integrates with apk to quickly backup and restore your system
            state in postmarketOS
        </p>
    </description>
    <launchable type="desktop-id">org.postmarketos.Backup.desktop</launchable>
    <provides>
	<binary>pmos-backup</binary>
        <binary>pmos-backup-gui</binary>
    </provides>
    <screenshots>
        <screenshot type="default">
            <image>http://brixitcdn.net/metainfo/backup.png</image>
        </screenshot>
    </screenshots>
    <url type="homepage">https://gitlab.com/postmarketOS/postmarketos-backup</url>
    <content_rating type="oars-1.1"/>
    <releases>
        <release version="1.0.0" date="2021-09-18">
            <description>
                <p>
                    New major release because the backup file format has changed
                </p>
                <ul>
                  <li>Backups are now directly written to targz</li>
                  <li>No more import and export functionality</li>
                  <li>More granular control over restore operations</li>
                </ul>
            </description>
        </release>
        <release version="0.1.0" date="2021-05-21">
            <description>
                <p>
                    First release
                </p>
            </description>
        </release>
    </releases>
</component>
